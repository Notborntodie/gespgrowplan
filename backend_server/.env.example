# GESP练习系统环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 应用配置（HOST=127.0.0.1 仅本机访问，由 Nginx 反向代理对外提供服务）
NODE_ENV=production
PORT=3000
HOST=127.0.0.1

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=gesp_practice_system
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CONNECTION_LIMIT=40
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_MAX_IDLE=60000
DB_IDLE_TIMEOUT=60000

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=100
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=10000

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760


# 应用基础URL配置（用于生成图片等资源的完整URL）
# 开发: http://localhost:3000  生产: https://你的域名（如 https://your-domain.com）
# 在 Nginx 反向代理后，若不配置则会从请求头自动推断
BASE_URL=http://localhost:3000

# CORS允许的来源（多个来源用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80
